@{
    Layout = "_Layout";
    ViewData["Title"] = "Products Page";
}
@model IEnumerable<Product>


<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-header d-flex justify-content-between mb-4">
                    <h2 class="section-title">Products</h2>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6 col-12">
                    <!-- Start Single Product -->
                    <a asp-controller ="Product" asp-action="ProductDetails" asp-route-id="@product.Id">
                        <div class="single-product">
                            <aasp-controller ="Product" asp-action="ProductDetails" asp-route-id="@product.Id">
                                <div class="product-image">
                                    <img src="~/Images/Products/@product.ImageUrl" alt="@product.Name">
                                    <div class="button">
                                        <a asp-controller="" asp-action="" class="btn"><i class="lni lni-cart"></i> Order</a>
                                    </div>
                                </div>
                                <div class="product-info">
                                    <h4 class="title">
                                        <a asp-controller="" asp-action="">@product.Name</a>
                                    </h4>
                                    <div>
                                        @if (product.IsAvailable)
                                        {
                                            <span class="badge bg-success av">In Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger un">Unavailable</span>
                                        }
                                    </div>
                                    <div class="price">

                                        @if (product.DiscountedPrice > 0 && product.DiscountedPrice < product.Price)
                                        {
                                            <p>
                                                <strong>Price:</strong>
                                                <span style="text-decoration: line-through; color: gray;">$@product.Price</span>
                                            </p>
                                            <p>
                                                <strong>Discounted Price:</strong>
                                                <span style="color: #d9534f; font-weight: bold;">$@product.DiscountedPrice</span>
                                            </p>
                                        }
                                        else
                                        {
                                            <p><strong>Price:</strong> $@product.Price</p>
                                        }

                                    </div>
                                </div>
                            </aasp-controller>
                        </div>
                    </a>
                    <!-- End Single Product -->
                </div>
                
            }
        </div>
    </div>
</section>
