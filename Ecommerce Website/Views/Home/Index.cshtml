@{
    ViewData["Title"] = "الصفحة الرأيسية";
}

@model IEnumerable<Testmonials>

<section class="call-action section">
    <div class="container">
        <div class="row ">
            <div class="col-lg-8 offset-lg-2 col-12">
                <div class="inner">
                    <div class="content">
                        <h2 class="wow fadeInUp" data-wow-delay=".4s">
                            نزرع مستقبلًا أكثر خضرة
                        </h2>
                        <p class="wow fadeInUp" data-wow-delay=".6s">
                            مع جرين فرتا،
                            <br> كل موسم زراعي أفضل من السابق. اكتشف منتجاتنا وابدأ رحلتك نحو حصاد وفير وصحة نباتية أفضل.

                        </p>
                        <div class="button wow fadeInUp" data-wow-delay=".8s">
                            <a asp-controller="product" asp-action="index" class="btn"> اعرف أكثر عن منتجاتنا →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="gallery" class="relative w-full" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
        <!-- Item 1 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <img src="~/Images/Home_Images/RootVit.png" class="absolute block max-w-full h-auto -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 carousel-image" alt="">
        </div>
        <!-- Item 2 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item="active">
            <img src="~/Images/Home_Images/FertaCal.png" class="absolute block max-w-full h-auto -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 carousel-image" alt="">
        </div>
        <!-- Item 3 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <img src="~/Images/Home_Images/AlgharbiaRoots SM.png" class="absolute block max-w-full h-auto -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 carousel-image" alt="">
        </div>
        <!-- Item 4 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <img src="~/Images/Home_Images/FertaGrow.png" class="absolute block max-w-full h-auto -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 carousel-image" alt="">
        </div>
        <!-- Item 5 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <img src="~/Images/Home_Images/FertaMino.png" class="absolute block max-w-full h-auto -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 carousel-image" alt="">
        </div>
    </div>
    <!-- Slider controls -->
    <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4" />
            </svg>
            <span class="sr-only">Previous</span>
        </span>
    </button>
    <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
            </svg>
            <span class="sr-only">Next</span>
        </span>
    </button>
</div>
<br />

<section class="banner section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="single-banner" style="background-image:url('assets/images/banner/banner-1-bg.jpg')">
                    <div class="content">
                        <h2>Smart Watch 2.0</h2>
                        <p>Space Gray Aluminum Case with <br>Black/Volt Real Sport Band </p>
                        <div class="button">
                            <a href="product-grids.html" class="btn">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <div class="single-banner custom-responsive-margin" style="background-image:url('assets/images/banner/banner-2-bg.jpg')">
                    <div class="content">
                        <h2>Smart Headphone</h2>
                        <p>
                            Lorem ipsum dolor sit amet, <br>eiusmod tempor
                            incididunt ut labore.
                        </p>
                        <div class="button">
                            <a href="product-grids.html" class="btn">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="why-green-ferta">
    <div class="container">
        <div class="section-header">
            <h2>لماذا Green Ferta?</h2>
            <p>نقدم لكم أفضل الحلول الزراعية بجودة عالية</p>
        </div>

        <ul class="features-list">
            <!-- توصيل سريع -->
            <li class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-truck-fast"></i>
                </div>
                <div class="feature-content">
                    <h3>توصيل سريع</h3>
                    <p>توصيل خلال 24-48 ساعة لجميع المحافظات</p>
                </div>
            </li>

            <!-- منتجات عالية الجودة -->
            <li class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-seedling"></i>
                </div>
                <div class="feature-content">
                    <h3>منتجات عالية الجودة</h3>
                    <p>منتجات معتمدة وذات كفاءة عالية</p>
                </div>
            </li>

            <!-- دعم فني متخصص -->
            <li class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-headset"></i>
                </div>
                <div class="feature-content">
                    <h3>دعم فني متخصص</h3>
                    <p>استشارات زراعية من خبراء متخصصين</p>
                </div>
            </li>

            <!-- ضمان الجودة -->
            <li class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-award"></i>
                </div>
                <div class="feature-content">
                    <h3>ضمان الجودة</h3>
                    <p>منتجاتنا خاضعة لرقابة الجودة الدورية</p>
                </div>
            </li>
        </ul>
    </div>
</section>


<section class="testimonials-section">
    <div class="section-header">
        <h2>آراء عملائنا</h2>
        <p>ما يقوله المزارعون عن منتجاتنا</p>
    </div>
    <div id="testimonialsGallery" class="relative w-full" data-carousel="slide" data-carousel-interval="5000">
        <!-- Carousel wrapper -->
        <div class="relative h-56 overflow-hidden rounded-lg md:h-80">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="hidden duration-700 ease-in-out" data-carousel-item>
                        <div class="testimonial-card flex items-center bg-white rounded-lg shadow-md p-4 mx-2 h-full">
                            <img class="quote-icon mr-4" src="@Url.Content("~/images/quote by iconsvg.co.svg")" alt="Quote Icon" />
                            <div class="text-section">
                                <h4 class="client-name text-base font-bold text-gray-800 mb-1">@item.Name</h4>
                                <p class="client-message text-lg text-gray-600">"@item.Message"</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>لا توجد آراء متاحة حالياً</p>
            }
        </div>
    </div>
</section>
