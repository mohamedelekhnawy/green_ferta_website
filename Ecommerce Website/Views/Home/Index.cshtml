@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

@model IEnumerable<Testmonials>

<!-- Hero Section -->
<section class="hero-section h-screen relative" data-aos="fade-up">
    <div class="container mx-auto h-full flex justify-center items-center">
        <img src="/Images/Home_Images/man.png" alt="Man-Hero-Section" class="man-image">
    </div>
</section>

<!-- Ticker (ممكن تضيف محتوى ليه لاحقاً) -->
<div class="ticker-wrapper" data-aos="fade-left">
    <div class="ticker">
    </div>
</div>

<!-- How we can help -->
<section data-aos="fade-up">
    <div class="frame-parent">
        <div class="section-header">
            <h2 class="how-we-can">إزاي نقدر نساعدك</h2>
        </div>

        <div class="grid-container">
            <!-- Example Card -->
            <div class="card" data-aos="zoom-in" data-aos-delay="100">
                <div class="card-img">
                    <img src="~/Images/Home_Images/2 1.png" alt="تمكين المزارعين">
                </div>
                <h3>تمكين المزارعين</h3>
                <p>نوفر أدوات متقدمة لزيادة إنتاجية محصولك.</p>
            </div>

            <div class="card" data-aos="zoom-in" data-aos-delay="200">
                <div class="card-img">
                    <img src="~/Images/Home_Images/3 1.png" alt="تقليل المخاطر">
                </div>
                <h3>تقليل المخاطر</h3>
                <p>ننفذ نظام تأمين زراعي قوي لتقليل الخسائر والمخاطر المالية.</p>
            </div>

            <div class="card" data-aos="zoom-in" data-aos-delay="300">
                <div class="card-img">
                    <img src="~/Images/Home_Images/6 1.png" alt="قرارات مرنة">
                </div>
                <h3>قرارات مرنة</h3>
                <p>توقعات الطقس والمحاصيل لحظيًا لاتخاذ قرارات مناسبة.</p>
            </div>

            <div class="card" data-aos="zoom-in" data-aos-delay="400">
                <div class="card-img">
                  <img src="~/Images/Home_Images/Untitled design 1.png" alt="تحسين صحة التربة">
                </div>
                <h3>تحسين صحة التربة</h3>
                <p>أدوات لتوقع حالة التربة وتقديم توصيات لتحسينها.</p>
            </div>

            <div class="card" data-aos="zoom-in" data-aos-delay="500">
                <div class="card-img">
                    <img src="~/Images/Home_Images/4 1.png" alt="تنبيهات في الوقت المناسب">
                </div>
                <h3>تنبيهات في الوقت المناسب</h3>
                <p>إشعارات بالمهام الجارية والقادمة لاتخاذ الإجراء في الوقت المناسب.</p>
            </div>

            <div class="card" data-aos="zoom-in" data-aos-delay="600">
                <div class="card-img">
                    <img src="~/Images/Home_Images/5 1.png" alt="معرفة الاسمدة و الموبيدات">
                </div>
                <h3>معرفة بالأسمدة و الموبيدات</h3>
                <p>معلومات عن الأسمدة و الموبيدات لتحسين العمليات الزراعية.</p>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="testimonials-section" data-aos="fade-up">
    <div class="section-header">
        <h2>المزارعين بيقولوا إيه عن جرين فرتا؟</h2>
        <p>اسمع من زمايلك المزارعين واعرف تجاربهم مع منتجاتنا!</p>
    </div>

    <div id="testimonialsGallery" class="relative w-full" data-carousel="slide" data-carousel-interval="5000">
        <div class="relative h-56 overflow-hidden rounded-lg md:h-80">
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="hidden duration-700 ease-in-out" data-carousel-item>
                        <div class="testimonial-card flex items-center bg-white rounded-lg shadow-md p-4 mx-2 h-full">
                            <img class="quote-icon mr-4" src="@Url.Content("~/images/quote-by-iconsvg.co.svg")" alt="Quote Icon" />
                            <div class="text-section">
                                <h4 class="client-name text-base font-bold text-gray-800 mb-1">@item.Name</h4>
                                <p class="client-message text-lg text-gray-600">"@item.Message"</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>لا توجد آراء متاحة حالياً</p>
            }
        </div>
    </div>
</section>
