    <!-- Comment Form -->
    <section class="bg-white p-8  max-w-2xl card mx-auto animate-fade-up mt-5">
        <h4 class="text-xl md:text-2xl font-bold text-green-700 text-center mb-4">اكتبلنا انطباعك عن الشركة</h4>
        <p class="text-gray-500 text-center mb-6">ضيف كومنت يساعد غيرك هنا وهيتضاف ف الكومناتات  </p>
        <form id="contactForm" method="post" asp-controller="AboutUs" asp-action="Testmonials">
            <input asp-for="Name" type="text" placeholder="الاسم" class="w-full p-3 mb-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            <input asp-for="Email" type="email" placeholder="البريد الإلكتروني" class="w-full p-3 mb-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            <textarea asp-for="Message" placeholder="اكتب رسالتك هنا..." class="w-full p-3 mb-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 h-32"></textarea>
            <span asp-validation-for="Message" class="text-red-500 text-sm"></span>
            <button type="submit" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors w-full">
                إرسال <i class="fas fa-paper-plane ml-2"></i>
            </button>
        </form>
    </section>

</div>
<!-- Scripts-->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById("contactForm").addEventListener("submit", function (e) {
            e.preventDefault();
            Swal.fire({
                icon: 'success',
                title: 'تم الإرسال! 🚀',
                text: 'شكرًا لتواصلك معنا، سنرد عليك قريبًا!',
                timer: 3000,
                showConfirmButton: false
            });
            setTimeout(() => {
                e.target.submit();
            }, 2000);
        });
    </script>
}