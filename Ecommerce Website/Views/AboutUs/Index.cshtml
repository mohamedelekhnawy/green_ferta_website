@{
    ViewData["Title"] = "عن الشركة";
    Layout = "_Layout";
}
@model Testmonials;

<div class=" container-fluid px-4 sm:px-6 lg:px-8 ">
    <!-- Hero Section -->
    <section class="text-center mb-16 relative overflow-hidden card h-96 flex items-center justify-center">
        <div class="absolute inset-0 " style="background-color:#59861f;"></div>
        <div class="container mx-auto relative z-10 px-4">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">ميدرا</h1>
            <p class="text-xl text-white max-w-2xl mx-auto">حلول زراعية متطورة لنمو مستدام </p>
        </div>
    </section>

    <!-- About Section -->
    <section class="mb-20 max-w-6xl mx-auto animate-fade-up">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
                <h2 class="text-3xl font-bold text-green-700 mb-6">من نحن</h2>
                <p class="text-gray-700 mb-4 leading-relaxed">
                    شركة ميدرا الزراعية هي شركة رائدة في تقديم حلول الزراعة الذكية والمغذيات العضوية منذ عام 2010. نعمل على تمكين المزارعين من خلال التكنولوجيا والمعرفة والخدمة المتميزة.
                </p>
                <p class="text-gray-700 leading-relaxed">
                    من خلال فرقنا المتخصصة، نساعد عملاءنا في تحسين الإنتاجية، وتحقيق الاستدامة الزراعية، والوصول إلى أسواق جديدة بجودة عالية وثقة.
                </p>
            </div>
            <div class="card overflow-hidden ">
                <img src="/Images/Home_Images/logo.png" alt="فريق ميدرا" class="w-full h-auto object-cover">
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="card mb-20 text-white py-12" style="background-color:#59861f;">
        <div class="max-w-6xl mx-auto px-4">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
                <div>
                    <div class="text-4xl font-bold mb-2">5+</div>
                    <div>سنة خبرة</div>
                </div>
                <div>
                    <div class="text-4xl font-bold mb-2">70+</div>
                    <div>مزرعة مدعومة</div>
                </div>
                <div>
                    <div class="text-4xl font-bold mb-2">40+</div>
                    <div>منتج زراعي</div>
                </div>
                <div>
                    <div class="text-4xl font-bold mb-2">20+</div>
                    <div>خبير زراعي</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Values Section -->
    <section class="mb-20 animate-fade-up">
        <h2 class="text-3xl font-bold text-green-700 text-center mb-12">قيمنا</h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            <div class="bg-white p-8 card ">
                <div class="text-green-600 text-4xl mb-4">
                    <i class="fas fa-leaf"></i>
                </div>
                <h3 class=" text-xl font-bold mb-3 text-gray-800">الاستدامة</h3>
                <p class="text-gray-600">نحرص على استخدام حلول صديقة للبيئة تحافظ على التربة والمياه.</p>
            </div>
            <div class="card ">
                <div class="text-green-600 text-4xl mb-4">
                    <i class="fas fa-lightbulb"></i>
                </div>
                <h3 class="text-xl font-bold mb-3 text-gray-800">الابتكار</h3>
                <p class="text-gray-600">نقدم حلولًا تقنية متقدمة تواكب تطورات الزراعة الحديثة.</p>
            </div>
            <div class="card ">
                <div class="text-green-600 text-4xl mb-4">
                    <i class="fas fa-hands-helping"></i>
                </div>
                <h3 class="text-xl font-bold mb-3 text-gray-800">الثقة والدعم</h3>
                <p class="text-gray-600">علاقتنا بالمزارعين مبنية على الشفافية والدعم المستمر.</p>
            </div>
        </div>
    </section>

    <!-- Our team -->
    <section data-aos="fade-up" class="py-12 ourteam card ">
        <div class="frame-parent">
            <div class="section-header text-center mb-8">
                <h2 class="how-we-can">
                    المهندسون والقادة خلف المشاريع

                </h2>
            </div>

            <div class="grid-container">
                <!-- Example Card -->
