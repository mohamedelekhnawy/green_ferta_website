<header id="header" class="fixed top-0 left-0 w-full z-50 transition-transform duration-300 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
    <div class="max-w-screen-xl mx-auto px-4 py-3 flex items-center justify-between">
        <!-- Logo -->
        <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-3 rtl:space-x-reverse">
            <img src="~/Images/logo png.png" alt="Green Ferta" class="h-16 w-16 rounded-full object-cover HeaderLogo">
        </a>

        <!-- Desktop Nav -->
        <nav class="hidden md:flex space-x-6 rtl:space-x-reverse text-sm font-medium">
            <a asp-controller="Home" asp-action="Index" class="nav-link">الرئيسية</a>
            <a asp-controller="Category" asp-action="Index" class="nav-link">الأصناف</a>
            <a asp-controller="Product" asp-action="Index" class="nav-link">المنتجات</a>
            <a asp-controller="Borshor" asp-action="Index" class="nav-link">البرشورز</a>
            <a asp-controller="AboutUs" asp-action="Index" class="nav-link">عن الشركة</a>
        </nav>

        <!-- Search Bar (Desktop) -->
        <div class="hidden md:block w-72 mr-auto">
            <form action="/Product/Search" method="get" class="relative">
                <input type="search" name="query" dir="rtl" placeholder="ابحث عن المنتجات..."
                       class="w-full py-2 pl-10 pr-4 bg-gray-50 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-green-400 focus:bg-dark transition-all duration-300 shadow-sm searchdt">
                <button type="submit" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-green-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </button>
            </form>
        </div>

        <!-- User Avatar Dropdown -->
        <div class="relative">
            <button id="user-menu-toggle" class="avatar-btn" type="button">
                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135768.png" alt="User Avatar" class="rounded-full w-10 h-10">
            </button>

            <div id="user-dropdown" class="dropdown hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg z-50 overflow-hidden border border-gray-200 dark:border-gray-700">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-700">
                        <p class="text-sm text-gray-900 dark:text-dark">مرحبًا، تم تسجيل الدخول</p>
                    </div>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Dashboard" asp-action="Index" class="dropdown-item">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v16a1 1 0 01-1 1H4a1 1 0 01-1-1V4z" />
                            </svg>
                            لوحة التحكم
                        </a>
                    }
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                        <button type="submit" class="dropdown-item">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                            تسجيل الخروج
                        </button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="dropdown-item">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                        </svg>
                        تسجيل الدخول
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="dropdown-item">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                        </svg>
                        إنشاء حساب
                    </a>
                }
            </div>
        </div>

        <!-- Mobile Menu Button -->
        <div id="menu-wrapper" class="md:hidden">
            <button id="menu-toggle" class="p-2 rounded-md text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 menu">
        <div class="px-4 py-3 space-y-2">
            <a asp-controller="Home" asp-action="Index" class="mobile-link flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                الرئيسية
            </a>
            <a asp-controller="Category" asp-action="Index" class="mobile-link flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                </svg>
                الأصناف
            </a>
            <a asp-controller="Product" asp-action="Index" class="mobile-link flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
                المنتجات
            </a>
            <a asp-controller="Borshor" asp-action="Index" class="mobile-link flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
                البرشورز
            </a>
            <a asp-controller="AboutUs" asp-action="Index" class="mobile-link flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                عن الشركة
            </a>
        </div>
        <!-- Mobile Search Menu (Inside Mobile Menu) -->
        <div class="px-4 py-3 border-t border-gray-200 dark:border-gray-700">
            <form action="/Product/Search" method="get" class="relative">
                <input type="search" name="query" dir="rtl" placeholder="ابحث عن المنتجات..."
                       class="w-full py-2 px-4 pr-10 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 text-black">
                <button type="submit" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-green-600 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </button>
            </form>
        </div>
    </div>
</header>

<script>
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const userToggle = document.getElementById('user-menu-toggle');
    const userDropdown = document.getElementById('user-dropdown');

    // Toggle mobile menu
    menuToggle.addEventListener('click', (e) => {
        e.stopPropagation();
        mobileMenu.classList.toggle('hidden');

        // إغلاق قائمة المستخدم إذا كانت مفتوحة
        userDropdown.classList.add('hidden');
    });

    // Toggle user dropdown
    userToggle.addEventListener('click', (e) => {
        e.stopPropagation();
        userDropdown.classList.toggle('hidden');

        // إغلاق القائمة الموبايل إذا كانت مفتوحة
        mobileMenu.classList.add('hidden');
    });

    // إغلاق القوائم عند النقر خارجها
    document.addEventListener('click', () => {
        userDropdown.classList.add('hidden');
        mobileMenu.classList.add('hidden');
    });

    // منع إغلاق القوائم عند النقر داخلها
    mobileMenu.addEventListener('click', (e) => e.stopPropagation());
    userDropdown.addEventListener('click', (e) => e.stopPropagation());

        let lastScrollTop = 0;
    const header = document.getElementById("header");

    window.addEventListener("scroll", function() {
        let currentScroll = window.pageYOffset || document.documentElement.scrollTop;

        if (currentScroll > lastScrollTop) {
            // المستخدم نازل -> اخفي الهيدر
            header.style.transform = "translateY(-100%)";
        } else {
            // المستخدم طالع لفوق -> اظهر الهيدر
            header.style.transform = "translateY(0)";
        }
        lastScrollTop = currentScroll <= 0 ? 0 : currentScroll; // للتأكد من انه مش سالب
    }, false);
</script>