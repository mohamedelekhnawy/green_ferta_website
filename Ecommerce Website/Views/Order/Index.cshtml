@{
    ViewData["Title"] = "طلب منتج";
}

<div class="order max-w-2xl mx-auto mt-16 mb-3 p-8 bg-white dark:bg-gray-900 rounded-2xl shadow-xl border border-gray-300 dark:border-gray-700 m-b ">
    <div class="mb-6 text-center">
        <h2 class="text-3xl font-bold text-green-600 mb-2">طلب منتجاتنا بسهولة</h2>
        <p class="text-gray-600 dark:text-black-300 text-sm">
			لضمان خدمة تواصل أكثر فاعلية، يُرجى ملء البيانات بدقة، وسيتم تحويلك مباشرة إلى الواتساب لإتمام الطلب.
        </p>
    </div>

    <!-- نموذج الطلب -->
    <form id="orderForm" class="space-y-5">
        <div>
            <label class="block mb-1 text-sm font-semibold text-black dark:text-black">اسمك الكامل</label>
            <input type="text" id="fullName" class="w-full px-4 py-2 border border-gray-400 rounded-xl bg-white text-black focus:ring-2 focus:ring-green-500" required />
        </div>

        <div>
            <label class="block mb-1 text-sm font-semibold text-black dark:text-black">اسم المنتج</label>
            <input type="text" id="productName" class="w-full px-4 py-2 border border-gray-400 rounded-xl bg-white text-black focus:ring-2 focus:ring-green-500" required />
        </div>

        <div>
            <label class="block mb-1 text-sm font-semibold text-black dark:text-black">الكمية المطلوبة</label>
            <input type="text" id="quantity" class="w-full px-4 py-2 border border-gray-400 rounded-xl bg-white text-black focus:ring-2 focus:ring-green-500" min="1" required />
        </div>
        <div>
            <label class="block mb-1 text-sm font-semibold text-black dark:text-black">مكان توصيل الطلب</label>
            <input type="text" id="location" class="w-full px-4 py-2 border border-gray-400 rounded-xl bg-white text-black focus:ring-2 focus:ring-green-500" min="1" required />
        </div>

        <button type="button" onclick="sendToWhatsapp()"
                class="w-full bg-green-600 hover:bg-green-700 text-white py-3 rounded-xl text-lg font-bold transition duration-300">
            إرسال الطلب عبر واتساب
        </button>
    </form>
</div>


<script>
    function sendToWhatsapp() {
        const name = document.getElementById("fullName").value;
        const product = document.getElementById("productName").value;
        const quantity = document.getElementById("quantity").value;
		const location = document.getElementById("location").value;

        const message = `مرحبًا، اسمي ${name}%0Aأرغب في طلب المنتج التالي:%0A- المنتج: ${product}%0A- الكمية: ${quantity}%0A- مكان توصيل الطلب: ${location}`;
        const phoneNumber = "201159728917";

        window.open(`https://wa.me/${phoneNumber}?text=${message}`, "_blank");
    }
</script>
