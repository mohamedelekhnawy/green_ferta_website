@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "تأكيد البريد الإلكتروني";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



<form class="form">
    <p class="form-title">تأكيد البريد الإلكتروني</p>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="status-message text-success" style="text-align: center; margin-top: 20px;">
            @Model.StatusMessage
        </div>
    }
    else
    {
        <div class="status-message text-danger" style="text-align: center; margin-top: 20px;">
            حدث خطأ أثناء تأكيد البريد الإلكتروني.
        </div>
    }

    <p class="signup-link" style="text-align: center; margin-top: 20px;">
        <a asp-page="/Account/Login">العودة لتسجيل الدخول</a>
    </p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
